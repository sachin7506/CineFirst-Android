<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userListFragment">

    <fragment
        android:id="@+id/userListFragment"
        android:name="com.platformcommons.cinefirst.ui.UserListFragment"
        android:label="User List"
        tools:layout="@layout/fragment_user_list">

        <action
            android:id="@+id/action_userListFragment_to_addUserFragment"
            app:destination="@id/addUserFragment" />

        <action
            android:id="@+id/action_userListFragment_to_movieListFragment"
            app:destination="@id/movieListFragment" />
    </fragment>


    <fragment
        android:id="@+id/addUserFragment"
        android:name="com.platformcommons.cinefirst.ui.AddUserFragment"
        android:label="Add User"
        tools:layout="@layout/fragment_add_user">


        <action
            android:id="@+id/action_addUserFragment_to_userListFragment"
            app:destination="@id/userListFragment"
            app:popUpTo="@id/userListFragment"
            app:popUpToInclusive="true" />
    </fragment>


    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.platformcommons.cinefirst.ui.MovieListFragment"
        android:label="Movie List"
        tools:layout="@layout/fragment_movie_list">

        <action
            android:id="@+id/action_movieListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>


    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.platformcommons.cinefirst.ui.MovieDetailFragment"
        android:label="Movie Detail"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>

</navigation>
